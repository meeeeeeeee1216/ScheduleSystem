                <table border="2">
                    <thead>
                        <tr>
                            <th>月</th>
                            <th>火</th>
                            <th>水</th>
                            <th>木</th>
                            <th>金</th>
                            <th>土</th>
                            <th>日</th>
                        </tr>
                    </thead>
                    <tbody>
                        
                    </tbody>
                </table>
            </div>
            <div id="btn">
                <button id="prev">←前の月</button>

                <button id="next">次の月→</button>
            </div>
            
        </main>
        <!-- 基本のカレンダーを作る -->
        <script src="../public/js/make_calendar.js" type="text/javascript"></script>
