<!DOCTYPE html>
<html lang="ja">
    <head>
        <meta charset="UTF-8">
        <title>ショーシフト管理システム</title>
    </head>
    <body>
        
        <script src = "../public/js/make_header.js" type="text/javascript"></script>
        <main>
            
            <div class="title">
                <h2><%= show_name %></h2>
            </div>
            <div class="main">
                <h3 id="calendar_title"></h3>
                <table border="2">
                    <thead>
                        <!-- 今月の日付 -->
                        <tr id="calendar">
                            <th> 役/日</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- 一行目はthでヘッダー扱いにして役名一覧 -->
                        <% console.log(rolls); %>
                        <% rolls.forEach(function(value,key) { %>
                            <tr>
                                <th>
                                    <%= value %>
                                </th>
                            </tr>
                        <% }); %>
                    </tbody>

            </div>
            <script src="../public/js/make_show_calendar.js" type="text/javascript"></script>
        </main>
   </body>
</html>